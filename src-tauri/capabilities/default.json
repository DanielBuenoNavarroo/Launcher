{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "core:window:default",
    "core:window:allow-start-dragging",
    "dialog:default",
    "fs:default",
    "fs:allow-create",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-open",
    "fs:allow-read",
    "fs:allow-read-dir",
    "fs:allow-read-file",
    "fs:allow-read-text-file",
    "fs:allow-remove",
    "fs:allow-size",
    "fs:allow-write",
    "opener:default",
    "store:default",
    "upload:default",
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {
          "path": "$DOCUMENT/**"
        }
      ]
    }
  ]
}
